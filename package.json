{
    "name": "readit",
    "private": true,
    "version": "0.0.3",
    "main": "main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "start": "nodemon --exec electron . --watch ./ --ext js,html,css,vue",
        "dist": "electron-builder --win --x64"
    },
    "dependencies": {
        "pinia": "^2.1.7",
        "sass": "^1.71.1",
        "store2": "^2.14.3",
        "vue": "^3.4.19"
    },
    "devDependencies": {
        "electron": "^29.1.0",
        "@vitejs/plugin-vue": "^5.0.4",
        "electron-builder": "^24.13.3",
        "vite": "^5.1.4"
    },
    "build": {
        "appId": "com.lijiajun.app",
        "mac": {
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ],
            "icon": "icons/icon.png"
        }
    }
}
